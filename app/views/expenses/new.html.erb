<div class="page-container">
  <h1 class="page-title">New Expense</h1>
  <%= simple_form_for [@budget, @expense], html: { class: 'expense-form' } do |form| %>
    <div class="form-group">
      <%= form.input :name, label: "Expense Name", input_html: { class: 'form-input' }, label_html: { class: 'form-label' } %>
    </div>
    <div class="form-group">
      <%= form.input :amount, label: "Amount", input_html: { class: 'form-input', step: "0.01" }, label_html: { class: 'form-label' } %>
    </div>
    <div class="form-group">
      <%= form.input :category_id, collection: ExpenseCategory.all, label: "Category", prompt: "Select a category", input_html: { class: 'form-input' }, label_html: { class: 'form-label' } %>
    </div>
    <div class="form-group">
      <%= form.input :recurrence, label: "Recurrence", as: :select, collection: ['One-time', 'Daily', 'Weekly', 'Monthly', 'Yearly'], prompt: "Select Recurrence", input_html: { class: 'form-input' }, label_html: { class: 'form-label' } %>
    </div>
    <div class="form-group">
      <%= form.input :due_date, as: :string, input_html: { class: 'form-input', data: { controller: "datepicker" } }, label: "Due Date", label_html: { class: 'form-label' } %>
    </div>
    <div class="form-actions">
      <%= form.submit "Create Expense", class: "submit-button" %>
    </div>
  <% end %>

  <%= link_to 'Home', root_path, class: "regular-button home-button" %>
</div>
